	select IMX_HAVE_PLATFORM_MVF_SPI
	select IMX_HAVE_PLATFORM_MVF_DCU
	select IMX_HAVE_PLATFORM_MVF_SAI
	select HAVE_PIT

config FORCE_MAX_ZONEORDER
    int "MAX_ORDER"
    default "13"

